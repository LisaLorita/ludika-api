{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS",
      "runtimeArgs": ["--inspect-brk"],
      "args": ["${workspaceFolder}/dist/main.js"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
